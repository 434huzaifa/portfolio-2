// Prisma Schema for Portfolio Database
// Using PostgreSQL with Prisma Accelerate

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Site Metadata
model SiteMetadata {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  author      String
  siteUrl     String
  language    String
  theme       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Hero Section
model Hero {
  id          String   @id @default(cuid())
  name        String
  tagline     String   @db.Text
  description String   @db.Text
  ctas        Json     // Array of CTA objects: [{text, href, variant}]
  socialLinks Json     // Array of social links: [{platform, url, username}]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// About Section
model About {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  highlights  String[] // Array of key highlights
  focus       String[] // Array of focus areas
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Skill Categories (for organizing skills)
model SkillCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  order     Int      @default(0)
  skills    Skill[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Skills
model Skill {
  id         String        @id @default(cuid())
  name       String
  level      String // "expert", "intermediate", "beginner"
  categoryId String
  category   SkillCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  order      Int           @default(0)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([categoryId])
}

// Experience/Work History
model Experience {
  id          String   @id @default(cuid())
  company     String
  position    String
  duration    String
  description String   @db.Text
  techStack   String[] // Array of technologies
  highlights  String[] // Array of key achievements
  featured    Boolean  @default(false)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Project Categories
model ProjectCategory {
  id        String    @id @default(cuid())
  name      String    @unique
  order     Int       @default(0)
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// Projects
model Project {
  id          String          @id @default(cuid())
  title       String
  description String          @db.Text
  thumbnail   String?
  techStack   String[]
  features    String[]
  categoryId  String
  category    ProjectCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  githubLinks GithubLink[]
  featured    Boolean         @default(false)
  order       Int             @default(0)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([categoryId])
}

// GitHub Links (multiple repos per project)
model GithubLink {
  id        String   @id @default(cuid())
  name      String // "Frontend", "Backend", "API", etc.
  url       String
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
}

// Awards & Certifications
model Award {
  id        String   @id @default(cuid())
  title     String
  issuer    String
  date      String
  featured  Boolean  @default(false)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Education
model Education {
  id          String   @id @default(cuid())
  institution String
  degree      String
  field       String
  duration    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Languages
model Language {
  id          String   @id @default(cuid())
  name        String
  proficiency String // "native", "fluent", "professional", "basic"
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Contact Information
model Contact {
  id          String   @id @default(cuid())
  email       String
  location    String
  available   Boolean  @default(true)
  socialLinks Json     // Array of social links: [{platform, url, username}]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Navigation Links
model Navigation {
  id        String    @id @default(cuid())
  links     NavLink[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// Individual Navigation Links
model NavLink {
  id           String     @id @default(cuid())
  label        String
  href         String
  order        Int        @default(0)
  navigationId String
  navigation   Navigation @relation(fields: [navigationId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([navigationId])
}

// Site Settings
model Settings {
  id            String   @id @default(cuid())
  sectionOrder  String[] // Array of section IDs in order: ["hero", "about", "skills", ...]
  enabledSections String[] // Array of enabled section IDs
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
